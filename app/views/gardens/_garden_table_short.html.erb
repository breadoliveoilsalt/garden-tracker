
<table class="ui celled table center aligned">
  <thead>
    <tr>
      <th colspan="3">
        <h3> <%= garden.name %></h3>
        <p class="sub-menu-item"> <%= link_to "See Details", user_garden_path(current_user.id, garden.id)%> </p>
        <p class="sub-menu-item bold"> <%= link_to "Edit/Update", edit_user_garden_path(current_user.id, garden.id)%> </p>
        <p class="sub-menu-item bold"> <%= link_to "Delete", user_garden_path(current_user.id, garden.id), method: :delete, data: { confirm: 'Are you sure you want to delete this garden (and all of its plantings)?' }%> </p>
      </th>
    </tr>
    <tr>
      <th> Square Feet </th>
      <th> Summary of Upcoming Maturities </th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td> <%= garden.square_feet %> </td>
      <td> <%= render partial: "gardens/upcoming_maturities_short_list", locals: { garden: garden } %> </td>
    </tr>
  </tbody>
</table>
