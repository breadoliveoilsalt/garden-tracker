<div class="ui container center aligned">
  <%= display_any_errors(@garden) %>
</div>

<div class="ui container center aligned">

    <div>

        <h1 class="underlined"> Edit Garden </h1>

          <span class="bold"><%= link_to "Or Delete Garden", user_garden_path(current_user.id, @garden.id), method: :delete, data: { confirm: 'Are you sure you want to delete this garden (and all of its plantings)?' }%> </span>

        <div class="ui divider divider-spacer"></div>

        <div class="ui big form center aligned">

          <%= form_for [current_user, @garden] do |f| %>

            <%= render partial: "gardens/form", locals: { f: f } %>

            <% if @garden.plantings.any? %>

              <%= render partial: "plantings/form", locals: {f: f, plantings: @garden.plantings} %>

            <% end %>
        </div>

            <div>
              <%= f.submit "Submit", class: "ui button" %>
            </div>


          <% end %>

    </div>

</div>
