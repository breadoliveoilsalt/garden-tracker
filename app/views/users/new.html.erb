<h1> Create an Account for Garden Tracker </h1>

<%= render partial: 'layouts/errors', locals: {errors: @user.errors} if @user.errors.any? %>

<%= form_for @user do |f| %>
  <h2><%= f.label :name, "Name:  " %>
  <%= f.text_field :name %> </h2>
  <h2> <%= f.label :password, "Password:  " %>
  <%= f.password_field :password %> </h2>
  <%= f.submit "Sign In" %>
<% end %>
