
<%= flash_message %>

<h1><%= @species.name %> </h1>

<h2>
  <%= link_to "Edit", edit_user_species_path(current_user.id, @species.id) %> |
  <%= link_to 'Destroy', user_species_path(current_user.id, @species.id), method: :delete, data: { confirm: 'Are you sure you want to delete this species (and all of its plantings)?' } %>

</h2>

<h2> Produces: <%= @species.product %> </h2>

<h2> Sun Level: <%= @species.sunlight %> </h2>

<h2> Gardens where this species appears: </h2>

  <ul>
    <% if @species.gardens.any? %>
      <% @species.gardens.each do |garden| %>
        <li> <%= link_to garden.name, garden_path(garden.id) %></li>
      <% end %>
    <% else %>
      <li> This species has not been added to any gardens yet.</li>  
    <% end %>
  </ul>
