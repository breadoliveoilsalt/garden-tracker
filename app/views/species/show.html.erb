<div class="ui container center aligned">
  <%= flash_message %>
</div>

<div class="ui container center aligned">

    <div>

        <h1 class="underlined"> <%= @species.name %></h1>

        <div class="ui four item menu stackable garden-show-menu">

          <p class="garden-sub-menu-item bold"> <%= link_to "Edit/Update", edit_user_species_path(@user.id, @species.id)%> </p>
          <p class="garden-sub-menu-item bold"> <%= link_to "Delete", user_garden_path(@user.id, @species.id), method: :delete, data: { confirm: 'Are you sure you want to delete this species?' }%> </p>

        </div>

        <div class="ui divider divider-spacer"></div>

        <h2> Category: <%= @species.catgory %> </h2>

        <div class="ui divider divider-spacer"></div>

        <h2> Sunlight: <%= @species.sunlight %> </h2>

        <div class="ui divider divider-spacer"></div>

        <h2> Days to Maturity: <%= @species.days_to_maturity %> </h2>

        <div class="ui divider divider-spacer"></div>

        <h2> Gardens where this species appears: </h2>

            <ul>
              <% if @species.gardens.any? %>
                <% @species.gardens.each do |garden| %>
                  <li> <%= link_to garden.name, garden_path(garden.id) %></li>
                <% end %>
              <% else %>
                <li> This species has not been added to any gardens yet.</li>
              <% end %>
            </ul>

        </div>
