<!DOCTYPE html>
<html>
  <head>
    <title>Garden Tracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- navbar -->
    
      <% if signed_in? && !visiting_initial_pages %>
        <div class="ui container">

          <h1 class="ui header center aligned" style="margin:2em">Garden Tracker</h1>
          <%= link_to "Sign Out", signout_path, method: :delete %>

        </div>
      <% end %>
    <!-- navbar end -->

    <%= yield %>
  </body>
</html>
