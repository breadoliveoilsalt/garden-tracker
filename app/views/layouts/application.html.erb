<!DOCTYPE html>
<html>
  <head>
    <title>Garden Tracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>


      <% if signed_in? && !visiting_initial_pages %>

        <div class="ui container">

          <h1 class="ui header center aligned" style="margin-top:2em">Garden Tracker</h1>

          <p class="ui text container center aligned"> Welcome back, <%= current_user.name %>.  When you're ready, <%= link_to "sign out here", signout_path, method: :delete %>.</p>

        <!-- navbar -->
          <div class="ui three item menu stackable">
              <a class="ui item top_menu" href="/users/<%=current_user.id%>">Home</a>
              <a class="ui item top_menu" href="/users/<%=current_user.id%>/gardens">Gardens</a>
              <a class="ui item top_menu" href="/users/<%=current_user.id%>/species" >Species</a>
          </div>
        <!-- navbar end -->


        </div>
      <% end %>


    <%= yield %>
  </body>
</html>
