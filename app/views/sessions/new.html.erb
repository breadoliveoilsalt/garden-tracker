<h1> Sign in to Garden Tracker </h1>

<% if flash[:message] %>
  <h3> Sorry, the following error(s) occured: </h3>
    <ul>
      <li><%= flash[:message] %> </li>
    </ul>
<% end  %>

<%= form_for @user, url: sessions_create_path, method: :post do |f| %>
  <h2><%= f.label :name, "Name:  " %>
  <%= f.text_field :name %> </h2>
  <h2> <%= f.label :password, "Password:  " %>
  <%= f.password_field :password %> </h2>
  <%= f.submit "Sign In" %>
<% end %>
