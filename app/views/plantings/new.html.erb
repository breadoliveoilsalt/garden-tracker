
<%= display_any_errors(@planting) %>

<h1> Create a Planting for <%= @garden.name %> </h1>

  <div>

    <%= form_for @planting, url: garden_plantings_path, method: :post do | planting_attrib | %>

      <%= planting_attrib.hidden_field :garden_id, :value => @garden.id %>

      <%= render partial: 'plantings/form', locals: {planting_attrib: planting_attrib} %>

      <%= planting_attrib.submit "Submit" %>
    <% end %>

  </div>
